<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/info_key"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="123"/>

    <ImageView
        android:id="@+id/info_forward"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/info_key"
        android:layout_marginTop="2dp"
        android:layout_alignBottom="@id/info_key"
        android:layout_marginBottom="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/forward" />

    <TextView
        android:id="@+id/info_content"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/info_key"
        android:layout_alignBottom="@id/info_key"
        android:layout_toLeftOf="@id/info_forward"
        android:layout_marginRight="10dp"
        android:gravity="right|center_vertical"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:text="123"
        android:singleLine="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/info_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@id/info_key"
        android:layout_marginTop="-22.5dp"
        android:layout_toLeftOf="@id/info_forward"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@mipmap/head"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_key"
        android:layout_alignParentBottom="true"
        android:background="@color/line"/>

</RelativeLayout>