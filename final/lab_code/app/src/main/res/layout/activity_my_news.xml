<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mynews_topbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/main">
        <TextView
            android:id="@+id/mynews_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="我的帖子"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="0px"
            android:layout_alignTop="@id/mynews_topbar_title"
            android:layout_alignBottom="@id/mynews_topbar_title"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back"
            android:onClick="back"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mynews_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mynews_topbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
