<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/dl"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.dg123.myapplication.MainActivity">

        <RelativeLayout
            android:id="@+id/activity_main_topbar"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/main">
            <TextView
                android:id="@+id/activity_main_topbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="@string/title"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="0px"
                android:layout_alignTop="@id/activity_main_topbar_title"
                android:layout_alignBottom="@id/activity_main_topbar_title"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/menu"
                android:onClick="pop"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="0px"
                android:layout_alignTop="@id/activity_main_topbar_title"
                android:layout_alignBottom="@id/activity_main_topbar_title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/search"
                android:onClick="search"/>
        </RelativeLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_main_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            </android.support.v7.widget.RecyclerView>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/dl_left"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:background="@color/theme"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/dl_left_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/dl_left_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/head"
                android:scaleType="centerCrop"
                android:layout_alignLeft="@id/dl_left_background"
                android:layout_alignBottom="@id/dl_left_background"
                android:layout_marginBottom="48dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/dl_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dl_left_head"
                android:layout_alignTop="@id/dl_left_head"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:text="moy"/>
            <TextView
                android:id="@+id/dl_left_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/dl_left_head"
                android:layout_alignBottom="@id/dl_left_background"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="大家好，我是moy，我的偶像是比利·海灵顿，总有一天，我要在摔跤上打败他"
                android:maxLines="2"
                android:ellipsize="end"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <ImageView
                android:id="@+id/dl_left_write"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/write"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/dl_left_write1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@id/dl_left_write"
                android:layout_alignBottom="@id/dl_left_write"
                android:layout_toRightOf="@id/dl_left_write"
                android:layout_marginLeft="20dp"
                android:onClick="change"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="发布帖子" />
            <ImageView
                android:id="@+id/dl_left_article"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/article"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/dl_left_write"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:id="@+id/dl_left_article1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@id/dl_left_article"
                android:layout_alignBottom="@id/dl_left_article"
                android:layout_toRightOf="@id/dl_left_article"
                android:layout_marginLeft="20dp"
                android:onClick="change"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="我的帖子" />
            <ImageView
                android:id="@+id/dl_left_comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/comment"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/dl_left_article"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:id="@+id/dl_left_comment1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@id/dl_left_comment"
                android:layout_alignBottom="@id/dl_left_comment"
                android:layout_toRightOf="@id/dl_left_comment"
                android:layout_marginLeft="20dp"
                android:onClick="change"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="我的评论" />
            <ImageView
                android:id="@+id/dl_left_history"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/history"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/dl_left_comment"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:id="@+id/dl_left_history1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@id/dl_left_history"
                android:layout_alignBottom="@id/dl_left_history"
                android:layout_toRightOf="@id/dl_left_history"
                android:layout_marginLeft="20dp"
                android:onClick="change"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="历史足迹" />
            <ImageView
                android:id="@+id/dl_left_info"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/info"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/dl_left_history"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
            />
            <TextView
                android:id="@+id/dl_left_info1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@id/dl_left_info"
                android:layout_alignBottom="@id/dl_left_info"
                android:layout_toRightOf="@id/dl_left_info"
                android:layout_marginLeft="20dp"
                android:onClick="change"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="个人资料" />
            <ImageView
                android:id="@+id/dl_left_color"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/color"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/dl_left_info"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:id="@+id/dl_left_color1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@id/dl_left_color"
                android:layout_alignBottom="@id/dl_left_color"
                android:layout_toRightOf="@id/dl_left_color"
                android:layout_marginLeft="20dp"
                android:onClick="change"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="配色方案" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>


