<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dg123.lab8_code.ItemActivity">

    <TextView
        android:id="@+id/activity_item_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="姓名：" />

    <EditText
        android:id="@+id/activity_item_name_edit"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/activity_item_name_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/activity_item_birthday_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_item_name_label"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="生日：" />

    <EditText
        android:id="@+id/activity_item_birthday_edit"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_item_name_label"
        app:layout_constraintLeft_toRightOf="@id/activity_item_birthday_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/activity_item_gift_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_item_birthday_label"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="礼物：" />

    <EditText
        android:id="@+id/activity_item_gift_edit"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_item_birthday_label"
        app:layout_constraintLeft_toRightOf="@id/activity_item_gift_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/activity_item_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_item_gift_label"
        android:layout_marginTop="20dp"
        android:text="增加"
        android:textColor="@color/white"
        android:background="@color/green"
        android:onClick="add"/>



</android.support.constraint.ConstraintLayout>
